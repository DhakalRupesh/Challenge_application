<?xml version="1.0" encoding="utf-8"?>
<FrameLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    tools:context=".fragments.Profile"
    android:background="@color/colorBg">

    <RelativeLayout
        android:layout_width="match_parent"
        android:paddingTop="20dp"
        android:layout_height="match_parent">

        <ImageView
            android:layout_width="35dp"
            android:layout_height="35dp"
            android:clickable="true"
            android:elevation="10dp"
            android:layout_marginLeft="30dp"
            android:layout_alignParentLeft="true"
            android:src="@drawable/ic_baseline_help_24"
            />

        <ImageView
            android:id="@+id/img_profile_logout"
            android:layout_width="35dp"
            android:layout_height="35dp"
            android:layout_alignParentEnd="true"
            android:layout_marginRight="30dp"
            android:clickable="true"
            android:elevation="10dp"
            android:src="@drawable/logout" />

        <de.hdodenhof.circleimageview.CircleImageView
            android:id="@+id/img_profile_Image"
            android:layout_width="130dp"
            android:layout_height="150dp"
            android:elevation="10dp"
            android:layout_marginTop="70dp"
            android:layout_centerHorizontal="true"
            android:src="@drawable/profile_picture" />

        <TextView
            android:id="@+id/tv_profile_username"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_below="@id/img_profile_Image"
            android:layout_centerHorizontal="true"
            android:layout_marginTop="10dp"
            android:fontFamily="@font/oswald"
            android:textSize="19sp"
            android:text="wackyjacky101"
            android:textStyle="bold"
            android:textColor="@color/colorWhiteHeading" />

        <TextView
            android:id="@+id/tv_profile_game_points"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="500 BP"
            android:fontFamily="@font/oswald"
            android:textColor="@color/colorWhiteSub"
            android:layout_marginTop="5dp"
            android:layout_below="@id/tv_profile_username"
            android:layout_centerHorizontal="true"/>


        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_below="@id/tv_profile_game_points"
            android:orientation="vertical"
            android:layout_marginTop="-30dp"
            >
            <ImageView
                android:layout_width="match_parent"
                android:layout_height="100dp"
                android:src="@drawable/profilewavy"/>

            <LinearLayout
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:orientation="vertical"
                android:layout_gravity="center_horizontal"
                android:layout_marginTop="30dp">

                <LinearLayout
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:orientation="horizontal"
                    android:layout_marginTop="20dp">

                    <ImageView
                        android:id="@+id/img_profile_myprofile"
                        android:layout_width="35dp"
                        android:layout_height="35dp"
                        android:src="@drawable/ic_baseline_person_profile_24"
                        />

                    <TextView
                        android:id="@+id/tv_profile_myprofile"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:textColor="@color/colorWhiteSub"
                        android:layout_marginTop="5dp"
                        android:textSize="18sp"
                        android:fontFamily="@font/oswald"
                        android:layout_marginLeft="10dp"
                        android:text="My Profile"/>

                </LinearLayout>

                <LinearLayout
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:orientation="horizontal"
                    android:layout_marginTop="30dp">

                    <ImageView
                        android:id="@+id/imp_profile_redeem_cash"
                        android:layout_width="35dp"
                        android:layout_height="35dp"
                        android:src="@drawable/ic_baseline_redeem_24"/>

                    <TextView
                        android:id="@+id/tv_profile_redeem_cash"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:textColor="@color/colorWhiteSub"
                        android:layout_marginTop="5dp"
                        android:textSize="18sp"
                        android:fontFamily="@font/oswald"
                        android:layout_marginLeft="10dp"
                        android:text="Redeem"/>

                </LinearLayout>


                <LinearLayout
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:orientation="horizontal"
                    android:layout_marginTop="30dp">

                    <ImageView
                        android:id="@+id/img_profile_challenge"
                        android:layout_width="33dp"
                        android:layout_height="35dp"
                        android:src="@drawable/targets" />

                    <TextView
                        android:id="@+id/tv_profile_challenge"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:textColor="@color/colorWhiteSub"
                        android:layout_marginTop="5dp"
                        android:textSize="18sp"
                        android:fontFamily="@font/oswald"
                        android:layout_marginLeft="10dp"
                        android:text="Challenge"/>

                </LinearLayout>

                <LinearLayout
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:orientation="horizontal"
                    android:layout_marginLeft="-2dp"
                    android:layout_marginTop="30dp">

                    <ImageView
                        android:layout_width="35dp"
                        android:layout_height="35dp"
                        android:src="@drawable/ic_baseline_settings_24"/>

                    <TextView
                        android:id="@+id/tv_profile_settings"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:textColor="@color/colorWhiteSub"
                        android:layout_marginTop="5dp"
                        android:textSize="18sp"
                        android:fontFamily="@font/oswald"
                        android:layout_marginLeft="10dp"
                        android:text="Settings"/>

                </LinearLayout>

            </LinearLayout>

        </LinearLayout>

